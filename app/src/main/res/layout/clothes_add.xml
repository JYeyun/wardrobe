<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageButton
        android:id="@+id/button_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/icon_home"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/button_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/icon_search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="50dp"
        android:background="#CBCBCB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/bg_img1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line1"
        app:srcCompat="@drawable/icon_clothes_add_background" />

    <ImageButton
        android:id="@+id/button_clothes_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_clothes_add"
        app:layout_constraintBottom_toBottomOf="@+id/bg_img1"
        app:layout_constraintEnd_toEndOf="@+id/bg_img1"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="@+id/bg_img1"
        app:layout_constraintTop_toTopOf="@+id/bg_img1" />

    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="50dp"
        android:background="#CBCBCB"
        app:layout_constraintTop_toBottomOf="@+id/bg_img1"/>

    <ImageButton
        android:id="@+id/button_thickness_thick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_clothes_type_select_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line2"
        android:layout_marginTop="30dp"
        android:layout_marginStart="40dp"/>

    <ImageButton
        android:id="@+id/button_thickness_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_clothes_type_select_white"
        app:layout_constraintStart_toEndOf="@+id/button_thickness_thick"
        app:layout_constraintTop_toTopOf="@+id/button_thickness_thick"
        android:layout_marginStart="30dp"/>

    <ImageButton
        android:id="@+id/button_thickness_thin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_clothes_type_select_white"
        app:layout_constraintStart_toEndOf="@+id/button_thickness_normal"
        app:layout_constraintTop_toTopOf="@+id/button_thickness_normal"
        android:layout_marginStart="30dp"/>


    <View
        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="30dp"
        android:background="#CBCBCB"
        app:layout_constraintTop_toBottomOf="@+id/button_thickness_thick"/>

    <ImageButton
        android:id="@+id/button_category_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_clothes_type_select_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line3"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"/>

    <ImageButton
        android:id="@+id/button_category_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_clothes_type_select_white"
        app:layout_constraintStart_toEndOf="@+id/button_category_top"
        app:layout_constraintTop_toTopOf="@+id/button_category_top"
        android:layout_marginStart="30dp"/>

    <ImageButton
        android:id="@+id/button_category_coordination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_clothes_type_select_white"
        app:layout_constraintStart_toEndOf="@+id/button_category_bottom"
        app:layout_constraintTop_toTopOf="@+id/button_category_bottom"
        android:layout_marginStart="30dp"/>

    <View
        android:id="@+id/line4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="30dp"
        android:background="#CBCBCB"
        app:layout_constraintTop_toBottomOf="@+id/button_category_top"/>


    <ImageButton
        android:id="@+id/button_clothestype_short"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_clothes_type_select_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line4"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"/>

    <ImageButton
        android:id="@+id/button_clothestype_long"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_clothes_type_select_white"
        app:layout_constraintStart_toEndOf="@+id/button_clothestype_short"
        app:layout_constraintTop_toTopOf="@+id/button_clothestype_short"
        android:layout_marginStart="30dp"/>

    <ImageButton
        android:id="@+id/button_clothestype_sleeveless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_clothes_type_select_white"
        app:layout_constraintStart_toEndOf="@+id/button_clothestype_long"
        app:layout_constraintTop_toTopOf="@+id/button_clothestype_long"
        android:layout_marginStart="30dp"/>

    <View
        android:id="@+id/line5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="30dp"
        android:background="#CBCBCB"
        app:layout_constraintTop_toBottomOf="@+id/button_clothestype_short"/>

    <TextView
        android:id="@+id/textView_memo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="메모"
        app:layout_constraintStart_toStartOf="@+id/button_clothestype_short"
        app:layout_constraintTop_toBottomOf="@+id/line5" />

    <View
        android:id="@+id/line6"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="50dp"
        android:background="#CBCBCB"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_clothes_add_save_navy"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@+id/line6"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="두꺼움"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/button_thickness_thick"
        app:layout_constraintEnd_toEndOf="@+id/button_thickness_thick"
        app:layout_constraintStart_toStartOf="@+id/button_thickness_thick"
        app:layout_constraintTop_toTopOf="@+id/button_thickness_thick" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="보통"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/button_thickness_normal"
        app:layout_constraintEnd_toEndOf="@+id/button_thickness_normal"
        app:layout_constraintStart_toStartOf="@+id/button_thickness_normal"
        app:layout_constraintTop_toTopOf="@+id/button_thickness_normal" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="얇음"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/button_thickness_thin"
        app:layout_constraintEnd_toEndOf="@+id/button_thickness_thin"
        app:layout_constraintStart_toStartOf="@+id/button_thickness_thin"
        app:layout_constraintTop_toTopOf="@+id/button_thickness_thin" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="상의"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/button_category_top"
        app:layout_constraintEnd_toEndOf="@+id/button_category_top"
        app:layout_constraintStart_toStartOf="@+id/button_category_top"
        app:layout_constraintTop_toTopOf="@+id/button_category_top" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="하의"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/button_category_bottom"
        app:layout_constraintEnd_toEndOf="@+id/button_category_bottom"
        app:layout_constraintStart_toStartOf="@+id/button_category_bottom"
        app:layout_constraintTop_toTopOf="@+id/button_category_bottom" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="코디"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/button_category_coordination"
        app:layout_constraintEnd_toEndOf="@+id/button_category_coordination"
        app:layout_constraintStart_toStartOf="@+id/button_category_coordination"
        app:layout_constraintTop_toTopOf="@+id/button_category_coordination" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="반팔"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/button_clothestype_short"
        app:layout_constraintEnd_toEndOf="@+id/button_clothestype_short"
        app:layout_constraintStart_toStartOf="@+id/button_clothestype_short"
        app:layout_constraintTop_toTopOf="@+id/button_clothestype_short" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="긴팔"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/button_clothestype_long"
        app:layout_constraintEnd_toEndOf="@+id/button_clothestype_long"
        app:layout_constraintStart_toStartOf="@+id/button_clothestype_long"
        app:layout_constraintTop_toTopOf="@+id/button_clothestype_long" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="민소매"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/button_clothestype_sleeveless"
        app:layout_constraintEnd_toEndOf="@+id/button_clothestype_sleeveless"
        app:layout_constraintStart_toStartOf="@+id/button_clothestype_sleeveless"
        app:layout_constraintTop_toTopOf="@+id/button_clothestype_sleeveless" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="저장"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageButton5"
        app:layout_constraintEnd_toEndOf="@+id/imageButton5"
        app:layout_constraintStart_toStartOf="@+id/imageButton5"
        app:layout_constraintTop_toTopOf="@+id/imageButton5" />


</androidx.constraintlayout.widget.ConstraintLayout>