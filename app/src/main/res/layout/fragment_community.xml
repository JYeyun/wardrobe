<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="8dp"
        android:layout_marginHorizontal="14dp"
        app:selectionRequired="true"
        app:singleSelection="true"
        app:checkedButton="@id/button_community"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            style="@style/Widget.Wardrobe.Button.ButtonGroupItem"
            android:id="@+id/button_community"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="커뮤니티"
            android:textStyle="bold"
            android:textSize="13sp"
            android:textAlignment="center"
            android:backgroundTint="@color/button_toggle_group_background_tint"
            android:textColor="@drawable/selector_community_button_text" />

        <Button
            style="@style/Widget.Wardrobe.Button.ButtonGroupItem"
            android:id="@+id/button_liked_clothes"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="좋아요 누른 코디"
            android:textStyle="bold"
            android:textSize="13sp"
            android:textAlignment="center"
            android:backgroundTint="@color/button_toggle_group_background_tint"
            android:textColor="@drawable/selector_community_button_text" />

<!--        <Button-->
<!--            style="@style/Widget.Wardrobe.Button.ButtonGroupItem"-->
<!--            android:id="@+id/button_public_clothes"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="match_parent"-->
<!--            android:layout_weight="1"-->
<!--            android:text="내 공개 코디"-->
<!--            android:textStyle="bold"-->
<!--            android:textSize="13sp"-->
<!--            android:textAlignment="center"-->
<!--            android:backgroundTint="@color/button_toggle_group_background_tint"-->
<!--            android:textColor="@drawable/selector_community_button_text" />-->

    </com.google.android.material.button.MaterialButtonToggleGroup>

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/lightgray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/radioGroup" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line1" />


</androidx.constraintlayout.widget.ConstraintLayout>
