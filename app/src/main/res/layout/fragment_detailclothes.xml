<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:backgroundTint="#F3F6F6"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CBCBCB"
                android:orientation="horizontal" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">
                <Button
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_white_medium"
                    android:layout_weight="1"
                    android:text="두꺼움"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>
                <Button
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_white_medium"
                    android:layout_weight="1"
                    android:text="보통"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>
                <Button
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_white_medium"
                    android:layout_weight="1"
                    android:text="얇음"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CBCBCB"
                android:orientation="horizontal" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">
                <Button
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_white_medium"
                    android:layout_weight="1"
                    android:text="봄/가을"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>
                <Button
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_white_medium"
                    android:layout_weight="1"
                    android:text="여름"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>
                <Button
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_white_medium"
                    android:layout_weight="1"
                    android:text="겨울"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CBCBCB"
                android:orientation="horizontal" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">
                <Button
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_white_medium"
                    android:layout_weight="1"
                    android:text="긴팔"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>
                <Button
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_white_medium"
                    android:layout_weight="1"
                    android:text="반팔"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>
                <Button
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_white_medium"
                    android:layout_weight="1"
                    android:text="민소매"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CBCBCB"
                android:orientation="horizontal" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">
                <Button
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_white_medium"
                    android:layout_weight="1"
                    android:text="XS"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"/>
                <Button
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_white_medium"
                    android:layout_weight="1"
                    android:text="S"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"/>
                <Button
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_white_medium"
                    android:layout_weight="1"
                    android:text="M"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"/>
                <Button
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_white_medium"
                    android:layout_weight="1"
                    android:text="L"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"/>
                <Button
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_white_medium"
                    android:layout_weight="1"
                    android:text="XL"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CBCBCB"
                android:orientation="horizontal" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="브랜드"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CBCBCB"
                android:orientation="horizontal" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="메모"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CBCBCB"
        android:orientation="horizontal" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:padding="10dp">
        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/icon_heart_empty"
            android:layout_marginLeft="10dp"
            android:contentDescription="heart" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <Button
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/button_navy_medium"
            android:text="수정"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"/>
    </LinearLayout>

</LinearLayout>